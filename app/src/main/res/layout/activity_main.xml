<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert pounds to kilograms"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <TextView
        android:id="@+id/pounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the number of pounds:"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="181dp" />

    <EditText
        android:id="@+id/editPounds"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Enter a number here"
        android:layout_marginTop="15dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/pounds"
        app:layout_constraintTop_toBottomOf="@+id/pounds"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="272dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate!"
        app:layout_constraintStart_toStartOf="@+id/editPounds"
        app:layout_constraintTop_toBottomOf="@+id/editPounds"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteX="165dp"
        android:background="@color/red"
        tools:layout_editor_absoluteY="374dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number in kilograms"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="444dp" />

</androidx.constraintlayout.widget.ConstraintLayout>